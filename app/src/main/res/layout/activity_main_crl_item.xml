<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_crl_item_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/light_background"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/main_crl_item_tv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="03"
        android:textColor="@color/colorWhite"
        android:textSize="34sp"/>

    <TextView
        android:id="@+id/main_crl_item_tv_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/main_crl_item_tv_day"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/main_crl_item_tv_day"
        android:gravity="center"
        android:text="/12"
        android:textColor="@color/colorGray"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/main_crl_item_iv_mood"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBaseline="@id/main_crl_item_tv_day"
        android:layout_below="@id/main_crl_item_tv_day"
        android:layout_marginStart="6dp"
        android:scaleType="fitXY"
        android:src="@drawable/mood_happy"/>

    <LinearLayout
        android:id="@+id/main_crl_item_ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/main_crl_item_tv_month"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_crl_item_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/colorBlackAlpha"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <!--<View-->
        <!--android:id="@+id/main_crl_item_line_1"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_marginTop="4dp"-->
        <!--android:background="@color/colorGrayAlpha"/>-->

        <TextView
            android:id="@+id/main_crl_item_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:minLines="2"
            android:textColor="@color/colorBlackAlpha"/>

    </LinearLayout>

    <View
        android:id="@+id/main_crl_item_line_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/main_crl_item_ll_1"
        android:layout_marginTop="4dp"
        android:background="@color/colorGrayAlpha"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_crl_item_line_2"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_crl_item_tv_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="北京"
            android:textColor="@color/colorGray"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/main_crl_item_tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="周三/12:45:34"
            android:textColor="@color/colorGray"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/main_crl_item_tv_weather"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="晴转多云"
            android:textColor="@color/colorGray"
            android:textSize="12sp"/>

    </LinearLayout>

</RelativeLayout>